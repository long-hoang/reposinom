<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <u><h1><%= link_to place.name, place_path(place) %></h1></u>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p>

    <% if place.user.present? %>
      
      <small class="grey-out">Submitted By: <%= place.user.email %></small>

    <% end %>
      <br />
      <br />
<% if place.photos.present? %>
    <div class="col-12">
      <%= image_tag place.photos.last.picture.url, class: 'img-fluid'  %>

    </div>
<% end %>

<% if place.comments.present? %>
    <div class="col-12">
        <blockquote>
          <%if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small class="grey-out"> -<%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
<% end %>

  </div>

<% end %>

<br class = "clear" />
<br />
<br />
<br />


<div class = "pagination_block col-10 offset-1">
  <%= paginate @places %>
</div>



